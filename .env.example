# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# ID администратора (ваш Telegram ID, получить можно у @userinfobot)
TELEGRAM_ADMIN_ID=123456789

# Whitelist пользователей (через запятую, если пусто - доступ для всех)
ALLOWED_USER_IDS=123456789,987654321


# =============================================================================
# LLM CONFIGURATION (OpenAI + Claude fallback)
# =============================================================================

# OpenAI API Key (основной провайдер)
# Получить: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Модель OpenAI (gpt-4o-mini самая экономичная!)
OPENAI_MODEL=gpt-4o-mini

# Claude API Key (резервный провайдер)
# Получить: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Модель Claude
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022


# =============================================================================
# BUDGET & USAGE TRACKING
# =============================================================================

# Бюджет на пользователя в USD (JSON формат)
USER_BUDGETS={"123456789": 15.0, "987654321": 10.0}

# Период бюджета: daily, weekly, monthly
BUDGET_PERIOD=monthly

# Предупреждение при достижении X% бюджета
BUDGET_WARNING_THRESHOLD=80


# =============================================================================
# CALENDAR PROVIDERS
# =============================================================================

# Выбор провайдера: local, apple, google, microsoft, caldav
CALENDAR_PROVIDER=local

# Apple Calendar (CalDAV)
APPLE_CALENDAR_URL=https://caldav.icloud.com
APPLE_CALENDAR_USERNAME=your_email@icloud.com
APPLE_CALENDAR_PASSWORD=app-specific-password

# Google Calendar (OAuth 2.0)
GOOGLE_CALENDAR_CREDENTIALS_FILE=config/google_credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=data/google_token.json

# Microsoft Outlook (Graph API)
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret

# Universal CalDAV (Nextcloud, ownCloud, etc.)
CALDAV_URL=https://your-server.com/remote.php/dav
CALDAV_USERNAME=your_username
CALDAV_PASSWORD=your_password


# =============================================================================
# CONTACTS PROVIDERS
# =============================================================================

# Выбор провайдера: local, apple, google, microsoft
CONTACTS_PROVIDER=local

# Apple Contacts (CardDAV)
APPLE_CONTACTS_URL=https://contacts.icloud.com
APPLE_CONTACTS_USERNAME=your_email@icloud.com
APPLE_CONTACTS_PASSWORD=app-specific-password

# Google Contacts (People API)
GOOGLE_CONTACTS_CREDENTIALS_FILE=config/google_credentials.json
GOOGLE_CONTACTS_TOKEN_FILE=data/google_contacts_token.json

# Microsoft Contacts (Graph API) - использует те же credentials что и calendar


# =============================================================================
# DATABASE & SECURITY
# =============================================================================

# Путь к базе данных SQLite
DATABASE_PATH=data/bot.db

# Ключ шифрования (32 байта в base64, генерируется автоматически если пусто)
ENCRYPTION_KEY=

# Rate limiting (запросов в минуту)
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_PERIOD=60


# =============================================================================
# MEMORY & CONTEXT
# =============================================================================

# Максимальное количество сообщений в контексте
MAX_CONTEXT_MESSAGES=50

# Максимальное количество токенов в контексте
MAX_CONTEXT_TOKENS=8000

# Включить долговременную память (RAG)
ENABLE_LONG_TERM_MEMORY=true


# =============================================================================
# PLUGINS
# =============================================================================

# Включенные плагины (через запятую)
ENABLED_PLUGINS=calendar,contacts,excel,memory

# Путь к кастомным плагинам
CUSTOM_PLUGINS_DIR=bot/plugins


# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=data/bot.log

# Максимальный размер лог файла (в MB)
LOG_MAX_SIZE=10

# Количество резервных копий логов
LOG_BACKUP_COUNT=5


# =============================================================================
# FEATURES FLAGS
# =============================================================================

# Включить streaming ответов
ENABLE_STREAMING=true

# Включить анализ изображений (GPT-4 Vision)
ENABLE_IMAGE_ANALYSIS=false

# Включить распознавание голосовых сообщений (Whisper)
ENABLE_VOICE_RECOGNITION=false

# Включить обработку PDF
ENABLE_PDF_PROCESSING=false


# =============================================================================
# ADVANCED
# =============================================================================

# Таймзона по умолчанию
DEFAULT_TIMEZONE=Europe/Moscow

# Язык по умолчанию: en, ru
DEFAULT_LANGUAGE=ru

# Режим разработки
DEBUG=false
